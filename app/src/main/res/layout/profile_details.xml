<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="200dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    android:elevation="10dp"
    android:layout_marginLeft="10dp"
    app:cardBackgroundColor="@color/nice_blue"
    android:id="@+id/click_post">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_person_24"
            android:id="@+id/notification_icon"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/full_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/notification_icon"
            android:fontFamily="@font/bebas_regular"
            android:text="Full name"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/full_name_box"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_toEndOf="@id/full_name"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="45dp"
            android:showText="false"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_money_off_24"
            android:layout_marginTop="15dp"
            android:layout_below="@id/notification_icon"
            android:id="@+id/interest_icon"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/interest_icon"
            android:layout_below="@id/full_name"
            android:fontFamily="@font/bebas_regular"
            android:layout_marginTop="25dp"
            android:text="Interest"
            android:textSize="13sp"
            android:id="@+id/interest"/>

        <EditText
            android:id="@+id/interest_box"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_toEndOf="@id/interest"
            android:layout_below="@+id/full_name_box"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="55dp"
            android:showText="false"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>