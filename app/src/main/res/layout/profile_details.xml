<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="300dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="8dp"
    android:elevation="10dp"
    android:layout_marginLeft="10dp"
    app:cardBackgroundColor="@color/nice_blue"
    android:id="@+id/click_post">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="2dp">

        <ImageView
            android:id="@+id/personIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_person_24" />


        <TextView
            android:id="@+id/full_nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/personIcon"
            android:fontFamily="@font/bebas_regular"
            android:text="Full name"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/full_name_box"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@id/full_nameText"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/dollar_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personIcon"
            android:layout_marginTop="25dp"
            android:src="@drawable/ic_dollar" />

        <TextView
            android:id="@+id/broker_com_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/full_nameText"
            android:layout_marginTop="35dp"
            android:layout_toEndOf="@+id/dollar_icon"
            android:fontFamily="@font/bebas_regular"
            android:text="Broker Commission"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/commission"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/full_name_box"
            android:layout_marginStart="31dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/broker_com_box"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/buyComIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dollar_icon"
            android:layout_marginTop="27dp"
            android:src="@drawable/ic_buy" />

        <TextView
            android:id="@+id/buyComText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/broker_com_box"
            android:layout_marginTop="37dp"
            android:layout_toEndOf="@+id/buyComIcon"
            android:fontFamily="@font/bebas_regular"
            android:text="Buying Commission"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/buyComBox"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/broker_com_box"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/buyComText"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/sellIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buyComIcon"
            android:layout_marginTop="37dp"
            android:src="@drawable/ic_sell" />

        <TextView
            android:id="@+id/sellComText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buyComText"
            android:layout_marginStart="1dp"
            android:layout_marginTop="44dp"
            android:layout_toEndOf="@+id/sellIcon"
            android:fontFamily="@font/bebas_regular"
            android:text="selling Commission"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/sellComBox"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/buyComBox"
            android:layout_marginStart="34dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@id/sellComText"
            android:textColor="@color/white"
            android:textSize="13sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sellComText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="42dp"

            android:backgroundTint="@color/design_default_color_secondary"
            android:fontFamily="@font/bebas_regular"
            android:gravity="center"
            android:text="Update Details"
            android:textColor="@android:color/black"
            tools:textSize="13sp" />

        <ProgressBar
            android:id="@+id/progressBarProfile"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:ignore="missingConstraints" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>