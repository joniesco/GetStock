<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GetStock" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.GetStock.SmallComponent
        </item>
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryVariant">@color/grey_900</item>
        <item name="colorOnPrimary">@color/grey_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Secondary brand color. -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionBarStyle">?attr/shapeAppearanceSmallComponent</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GetStock.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GetStock.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GetStock.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ShapeAppearance.GetStock.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
</resources>